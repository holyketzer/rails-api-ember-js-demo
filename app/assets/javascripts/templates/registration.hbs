<legend>Registration</legend>
<div role='form' class='form'>
  {{#if errorMsg}}
    <div class='alert alert-danger'>
        {{errorMsg}}
    </div>
  {{/if}}
  {{#unless isValid}}
    <div class='alert alert-danger'>User details aren't valid</div>
  {{/unless}}

  <div {{bind-attr class=':form-group errors.email:has-error'}}>
    <label class='control-label' for='email'>Email</label>
    <div class='controls'>
      {{#each error in errors.email}}
        <span class='help-block'>{{error}}</span>
      {{/each}}
      {{view Em.TextField valueBinding='email' id='email' type='email' class='form-control'}}
    </div>
  </div>
  <div {{bind-attr class=':form-group errors.password:has-error'}}>
    <label class='control-label' for='password'>Password</label>
    <div class='controls'>
      {{#each error in errors.password}}
        <span class='help-block'>{{error}}</span>
      {{/each}}
      {{view Ember.TextField valueBinding='password' type='password' id='password' class='form-control'}}
      <span class='help-block'>at least 6 chars</span>
    </div>
  </div>
  <div {{bind-attr class=':form-group errors.password_confirmation:has-error'}}>
    <label class='control-label' for='password_confirmation'>Confirm Password</label>
    <div class='controls'>
      {{#each error in errors.password_confirmation}}
        <span class='help-block'>{{error}}</span>
      {{/each}}
      {{view Ember.TextField valueBinding='password_confirmation' type='password' id='password_confirmation' class='form-control'}}
    </div>
  </div>
  <div class='form-actions'>
    <input {{action 'register'}} type='submit' class='btn btn-primary' value='Register' />
    <input {{action 'cancel'}} type='submit' class='btn' value='Cancel' />
  </div>
</div>